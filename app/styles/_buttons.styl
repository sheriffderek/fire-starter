
reset-button()
  background: transparent
  border: 0
  margin: 0 // ?
  padding: 0
  appearance: none
  color: black
  font-familily: inherit // not working
  display: block
  user-select: none
  font: inherit
  // line-height: normal;
  overflow: visible // ?
  // text-decoration: none;
  // white-space: pre;
  //
  cursor: pointer
  // background: gray
  // color: black
  // font-size: 16px
  // padding: .25rem .5rem
  // min-width: 160px
  // text-align: center
  
  &:focus
    outline: 0
  &:hover
    color: inherit

.reset-button, [role='reset-button']
  reset-button()

.button, [role='button']
  reset-button()
  background: $white
  padding: $pad $pad*2
  border: $thick solid $highlight
  color: $highlight
  min-width: 200px
  text-align: center
  standard-type()
  uppercase()
  box-sizing: border-box
  font-size: 12px
  &:hover
    background: $highlight
    color: $white

.switch, [role='switch']
  reset-button()
  width: 44px
  height: 44px
  overflow: hidden
  border: 1px solid $gray
  color: $highlight
  .icon-x
    width: 100%
    height: 100%
  &:hover
    color: $highlight-dark
  
.switch-list
  li
    display: inline-block
    vertical-align: middle
