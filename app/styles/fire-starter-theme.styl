
@import 'basic/index'

.page-section
	position: relative
	width: 100% // $why!
	.background-image
		absolute-cover()
		background-image: url('https://images.unsplash.com/photo-1523002010469-ea85cb48674b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80')
		background-size: cover
		background-position: center
	.overlay
		absolute-cover()
		background-color: alpha($black, .3)
	.inner-w
		position: relative

.site-header
	position: relative
	background: $color
	position: sticky
	top: 0
	box-shadow: 0 0 5px 3px alpha(black, .2)

	.inner-w
		display: flex
		flex-direction: row
		align-items: center
		justify-content: space-between;

	.home-link
		display: flex
		flex-direction: row
		align-items: center
		@media $hover-setup
			transition: $slow
			&:hover
				color: $black
				transition: $fast

	.application-name
		margin-left: $pad
		
	.menu
		.item-list
			display: flex
			flex-direction: row
		.item
			&:not(:first-of-type)
				margin-left: $pad*2
		.link
			standard-hover()
			&:active
				color: blue
			&.active
				color: $color-dark
			@media $hover-setup
				&:hover
					//
					&:not(.active)
						color: $black

.page-content
	display: flex
	flex-direction: column
	background: $white
	color: $color

.page-header
	background: $gray-lighter
	color: $color-dark

.component
	margin-top: $v


.example-component
	width: 100%
	color: $highlight
	.item-list
		display: flex
		flex-direction: column
	.item
		margin-bottom: $pad*3
		.name
			small-type()
	@media $break-point-1-2
		.item-list
			flex-direction: row
			grid-in(2)
	@media $break-point-2-3
		.item-list
			grid-in(3)
	@media $break-point-3
		.item-list
			grid-in(4)


.one, .two
	.section-title
		color: $alternate-dark
		padding: $pad 0
	
.one
	.section-title
		color: $alternate-dark
		padding: $pad 0
	.example-component
		color: $alternate
		
.two
	.section-title
		color: $highlight
		padding: $pad 0
	.example-component
		color: $highlight-light

.site-footer
	background: $gray-light
	color: $gray-dark
	

a.active
	cursor: default
