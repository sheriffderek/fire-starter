
reset-button()
  background: transparent
  border: 0
  margin: 0 // ?
  padding: 0
  appearance: none
  color: black
  font-familily: inherit // not working
  display: block
  user-select: none
  font: inherit
  border-radius: 0
  // line-height: normal;
  overflow: visible // ?
