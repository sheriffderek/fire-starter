
light-theme()
  background: $gray-lighter
  color: $black
  h1
    color: $color
  h2
    large-type()
    color: $color-dark
  .module // or something
    inline-block()
    background: $black
    padding: $pad
    color: $white
    border-radius: $pad*.5
    
dark-theme()
  background: $black
  color: $white
  h1
    color: $highlight
  h2
    large-type()
    color: $alternate-light
  .module
    inline-block()
    background: $color
    padding: $pad
    color: $black
    border-radius: $pad*.5
    h4
      color: $white

