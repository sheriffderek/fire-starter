
includeWebfont(family, file)
  @font-face
    font-family: family
    src:  url(file + '.woff2') format('woff2'),
          url(file + '.woff') format('woff'),
          url(file + '.ttf') format('truetype') // can probably go soon

includeWebfont('Alegreya-Regular', '../fonts/alegreya/Alegreya-Regular')
includeWebfont('Nunito-Bold', '../fonts/nunito/Nunito-Bold')

$body-font    = 'Alegreya-Regular'
$heading-font = 'Nunito-Bold'
$monotype     = 'monespace'

small-type()
  font-size: 13px
  font-weight: light

standard-type()
  font-family: $body-font
  font-size: 16px
  font-weight: light
  line-height: 1.3
  

medium-type() // these should have purposeful names... and not denote visual size or style
  font-family: $heading-font
  font-size: 20px
  font-weight: bold
  line-height: 1.1

large-type()
  font-family: $heading-font
  font-size: 30px
  line-height: .8

extra-large-type()
  font-family: $heading-font
  font-size: 40px
  line-height: .8

body
  standard-type()
  