
// $webfonts
includeWebfont(family, file)
  @font-face
    font-family: family
    src:  url(file + '.woff2') format('woff2'),
          url(file + '.woff') format('woff'),
          url(file + '.ttf') format('truetype') // can probably go soon

includeWebfont('Alegreya-Regular', '../fonts/alegreya/Alegreya-Regular')
includeWebfont('Nunito-Bold', '../fonts/nunito/Nunito-Bold')

$body-font    = 'Alegreya-Regular'
$heading-font = 'Nunito-Bold'
$monotype     = 'courier'

// $case
capitalize()
  text-transform: capitalize

uppercase()
  text-transform: uppercase
  
lowercase()
  text-transform: lowercase

// $patterns
extra-small-type()
  font-size: 10px
  font-wight: light

small-type()
  font-size: 13px
  font-weight: light

standard-type()
  font-family: $body-font
  font-size: 16px
  font-weight: light
  line-height: 1.3
  @media $break-point-1
    // font-size: 17px

medium-type() // these should have purposeful names... and not denote visual size or style
  font-family: $heading-font
  font-size: 20px
  font-weight: bold
  line-height: 1.1
  @media $break-point-1
    font-size: 24px
  @media $break-point-2
    font-size: 28px

large-type()
  font-family: $heading-font
  font-size: 30px
  line-height: .8
  @media $break-point-1
    font-size: 36px
  @media $break-point-2
    font-size: 40px

extra-large-type()
  font-family: $heading-font
  font-size: 40px
  line-height: .8
  @media $break-point-1
    font-size: 44px
  @media $break-point-2
    font-size: 48px

monotype()
  font-family: $monotype

// $tones
whisper()
  extra-small-type()

quiet()
  small-type()

dead-pan() // ?
  standard-type()

statement()
  standard-type()
  uppercase()
  font-weight: 700

calm-voice()
  medium-type()

voice()
  large-type()
  
strong-voice()
  extra-large-type()

relaxed-action()
  standard-type()
  text-decoration: underline

