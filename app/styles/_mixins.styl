
@import '_convenience'

balance-inline-block()
  float: none //
  display: inline-block
  vertical-align: middle

translate-center()
  float: none
  top: 50% 
  left: 50%
  transform: translate(-50%, -50%)

absolute-translate-center()
  absolute()
  translate-center()

fixed-translate-center()
  fixed()
  translate-center()

selectable() // make the text of certain images 'selectable'
  user-select: text
  
clear-floats() // explain
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both
