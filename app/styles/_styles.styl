body
  background: $color

.inner-w
  max-width: $inner-w-width
  margin: 0 auto // horizontal center
  padding: $pad

.app-header
  background: $white
  h1
    large-type()

.main-menu
  //
  .menu
    //
    li
      display: inline-block
    a
      display: block
      padding: $pad*.5 $pad $pad*.5 0  
  
.content
  background: $black
  color: $white

.app-footer
  background: $color
  color: $white
